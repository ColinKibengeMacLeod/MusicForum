@model MusicForum.Models.Discussion

@{
    ViewData["Title"] = "Edit Discussion";
}

<h1>Edit Discussion</h1>

<form asp-action="Edit" asp-route-id="@Model.DiscussionId" enctype="multipart/form-data">
    <input type="hidden" asp-for="DiscussionId" />
    <input type="hidden" asp-for="ImageFilename" />
    <input type="hidden" asp-for="CreateDate" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
    </div>

    <!-- Current Image Section -->
    <div class="mb-3">
        <label class="form-label">Current Image</label>
        @if (!string.IsNullOrEmpty(Model.ImageFilename))
        {
            <div class="d-flex align-items-center">
                <img src="@Url.Content("/photos/" + Model.ImageFilename)" alt="Current Image"
                     style="width:60px; height: 60px; object-fit: cover; border-radius: 5px; margin-right: 10px; box-shadow: rgba(255, 255, 255, 0.25) 0px 0px 35px, rgba(255, 255, 255, 0.1) 0px 0px 15px;" />
                <input type="text" class="form-control" value="@Model.ImageFilename" readonly />
            </div>
        }
        else
        {
            <p>No image uploaded</p>
        }
    </div>

    <button type="submit" class="btn btn-primary pe-2">Save</button>
</form>

<div>
    <a class="pe-2" asp-action="Index">Back to List</a>
</div>
