@model MusicForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1>NEW COMMENT</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form class="crudForm" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" value="@ViewBag.DiscussionId" name="DiscussionId" />
            <div class="mb-3">
                <label asp-for="Content" class="control-label">Content:</label>
                <textarea asp-for="Content" class="form-control custom-input" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CreateDate" class="control-label">Date:</label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <button type="submit" class="pe-2 btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("GetDiscussion", "Home", new { id = ViewBag.DiscussionId })" class="discussion-link pe-2">Back</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
